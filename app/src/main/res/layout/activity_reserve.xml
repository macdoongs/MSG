<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    >

    <Switch
        android:text="먼저 연락하기 활성화"
        android:layout_height="wrap_content"
        android:id="@+id/sw_enable"
        android:layout_width="match_parent" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="연락, 횟수, 문구를 선택하면 적절한시간에 메시지를 보내드립니다."
        android:textSize="10sp"/>
    <Switch
        android:text="보내기전 알림 활성화"
        android:layout_height="wrap_content"
        android:id="@+id/sw_alert"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="메시지 보내기 전 발송여부를 묻습니다."
        android:textSize="10sp"/>
    <Switch
        android:text="Switch push enable"
        android:layout_height="wrap_content"
        android:id="@+id/sw_pushEnable"
        android:layout_width="match_parent" />

    <TextView
        android:text="Take off"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView8" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:id="@+id/textView4"
            android:layout_weight="1" />

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/np_week"
            android:layout_weight="1" />

        <TextView
            android:text="Times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:id="@+id/textView5"
            android:layout_weight="1" />

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/np_number"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="polite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_polite"
            android:layout_weight="1"
            android:background="@color/colorTransparent" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:text="impolite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_impolite"
            android:layout_weight="1"
            android:background="@color/colorTransparent" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:text="in person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_inPerson"
            android:layout_weight="1"
            android:background="@color/colorTransparent" />
    </LinearLayout>

    <TextView
        android:text="Plane message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_container">

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_message1" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_message2" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_message3" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_message4" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_message5" />

    </LinearLayout>

    <Button
        android:text="Reserve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_reserve"
        android:background="@color/colorPrimary" />

</LinearLayout>