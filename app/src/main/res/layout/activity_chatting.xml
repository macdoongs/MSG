<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:id="@+id/slidingPanel"
            android:background="@color/colorPrimary"
            android:visibility="gone"
            android:layout_width="200dp">

            <ImageView
                android:layout_height="80dp"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/iv_profile"
                android:layout_width="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"/>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/lv_menu">

            </ListView>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:orientation="horizontal"
                android:background="@color/colorTransparent">

                <Button
                    android:layout_width="46dp"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:id="@+id/btn_menu"
                    android:background="@drawable/slidingmenu" />

                <Space android:layout_height="match_parent"
                    android:layout_width="270dp"
                    android:background="@drawable/layout_border" />

                <Button
                    android:text="Temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_temp"
                    android:visibility="gone"
                    android:background="@color/colorPrimary" />

                <Button
                    android:layout_margin="4dp"
                    android:id="@+id/btn_setting"
                    android:background="@drawable/moreoption"
                    android:layout_width="5dp"
                    android:layout_height="40dp" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="400dp">

                <ListView
                    android:id="@+id/lv_message"
                    android:layout_width="match_parent"
                    android:transcriptMode="alwaysScroll"
                    android:divider="#FFFFFF"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:orientation="horizontal"
            android:background="@drawable/layout_border">

                <Button
                    android:id="@+id/btn_plus"
                    android:layout_margin="4dp"
                    android:background="@drawable/plus"
                    android:layout_height="wrap_content"
                    android:layout_width="46dp" />

                <EditText
                    android:id="@+id/et_message"
                    android:layout_width="280dp"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:ems="10"
                    android:background="@drawable/layout_border">
                    <requestFocus />
                </EditText>

                <Button
                    android:id="@+id/btn_send"
                    android:layout_width="66dp"
                    android:layout_margin="4dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/plane" />

            </LinearLayout>

            <GridLayout
                android:id="@+id/expandedMenu"
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:columnCount="3"
                android:rowCount="2"
                android:orientation="horizontal"
                android:visibility="gone"
                >
                    <Button android:text="Image"/>
                    <Button android:text="Video"/>
                    <Button android:text="Camera"/>
                    <Button android:text="Present"/>
                    <Button android:text="Contact"/>
                    <Button android:text="File"/>
                    <Button android:text="Map"/>
            </GridLayout>

        </LinearLayout>
    </FrameLayout>

</RelativeLayout>