<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_invite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.korchid.msg.activity.InviteActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <Button
            android:text="부모님 초대"
            android:layout_width="128dp"
            android:layout_height="40dp"
            android:textColor="#e6000000"
            android:id="@+id/btn_inviteParent"
            android:background="@drawable/rounded_button_p_2r" />


        <Button
            android:text="자녀 초대"
            android:layout_width="128dp"
            android:layout_height="40dp"
            android:textColor="#40000000"
            android:layout_marginLeft="8dp"
            android:id="@+id/btn_inviteChild"
            android:background="@drawable/rounded_button_t_2r" />
    </LinearLayout>

    <TextView
        android:text="Invite parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:id="@+id/et_role"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/et_nickname"
            android:hint="Name"
            android:layout_weight="0.8"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/et_phoneNumber"
            android:hint="010-0000-0000"
            android:layout_weight="1.2"/>


        <Button
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/btn_contactList"
            android:layout_weight="0.1"
            android:background="@drawable/ic_group_add_black_24dp"/>



    </LinearLayout>

    <Button
        android:text="초대 메시지보내기"
        android:layout_width="256dp"
        android:layout_height="40dp"
        android:id="@+id/btn_send"
        android:background="@drawable/rounded_button_t_2r"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <Button
        android:text="다 음"
        android:layout_width="256dp"
        android:layout_height="40dp"
        android:id="@+id/btn_kakaoLink"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rounded_button_p_2r" />

</LinearLayout>
